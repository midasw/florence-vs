                        <input asp-for="Input.FirstName" readonly class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Input.LastName"></label>
                        <input asp-for="Input.LastName" readonly class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.StreetAddress"></label>
                    <textarea asp-for="Input.StreetAddress" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input asp-for="Input.Image">
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Upload</button>
        </form>
    </div>
</div>

