@page
@model IndexModel
@{
    ViewData["Title"] = "Change avatar";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row mt-4">
    <div class="col-md-9">
        <p>
            <img src="@Url.Content(@Model.AvatarUrl)" alt="Avatar" title="Current avatar" width="250" />
        </p>
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <form method="post">
                <input type="hidden" name="delete" value="true" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete avatar</button>
                </div>
            </form>
        }
        <form id="avatar-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
